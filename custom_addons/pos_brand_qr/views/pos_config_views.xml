<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Brand QR Code settings to POS Configuration -->
        <record id="view_pos_config_form_brand_qr" model="ir.ui.view">
            <field name="name">pos.config.form.brand.qr</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <!-- Add the Brand QR Code setting after the last existing setting -->
                <xpath expr="//setting[last()]" position="after">
                    <setting string="Brand QR Code" help="Display your QR code on receipts">
                        <field name="brand_qr_enabled"/>
                        <div class="content-group mt16" invisible="not brand_qr_enabled">
                            <div class="row">
                                <div class="col-lg-4 o_light_label">
                                    <label string="QR Code Image" for="brand_qr_image"/>
                                </div>
                                <div class="col-lg-8">
                                    <field name="brand_qr_image" widget="image" class="oe_avatar"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 o_light_label">
                                    <label string="QR Code Label" for="brand_qr_label"/>
                                </div>
                                <div class="col-lg-8">
                                    <field name="brand_qr_label" placeholder="Visit our website"/>
                                </div>
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
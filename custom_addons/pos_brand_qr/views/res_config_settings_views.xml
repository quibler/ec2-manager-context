<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Brand QR Code settings to POS Settings -->
        <record id="res_config_settings_pos_brand_qr" model="ir.ui.view">
            <field name="name">pos.config.settings.brand.qr</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
                    <setting id="brand_qr_setting" string="Brand QR Code" help="Display QR code on receipts">
                        <field name="pos_brand_qr_enabled"/>
                        <div class="content-group" invisible="not pos_brand_qr_enabled">
                            <div class="row">
                                <div class="col-12">
                                    <field name="pos_brand_qr_image" widget="image" class="oe_avatar" style="max-width: 150px;"/>
                                </div>
                            </div>
                            <div class="row mt16">
                                <div class="col-12">
                                    <label for="pos_brand_qr_label" string="QR Code Label"/>
                                    <field name="pos_brand_qr_label" placeholder="Visit our website"/>
                                </div>
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
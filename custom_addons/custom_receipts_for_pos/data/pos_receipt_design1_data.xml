<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fixed Receipt Design 1 -->
    <record id="pos_receipt_design1_fixed" model="pos.receipt">
        <field name="name">Fixed Design 1</field>
        <field name="design_receipt"><![CDATA[
        <div class="pos-receipt-wrapper">
            <div class="pos-receipt-header">
                <t t-if="props.env.services.pos.config.logo">
                    <img t-att-src="'data:image/png;base64,' + props.env.services.pos.config.logo"
                         alt="Logo" class="pos-receipt-logo"/>
                    <br />
                </t>
                <div class="pos-receipt-contact">
                    <t t-if="props.env.services.pos.company.name">
                        <div><t t-esc="props.env.services.pos.company.name" /></div>
                    </t>
                    <t t-if="props.env.services.pos.company.phone">
                        <div>Tel: <t t-esc="props.env.services.pos.company.phone" /></div>
                    </t>
                    <t t-if="props.env.services.pos.company.vat">
                        <div><t t-esc="props.env.services.pos.company.vat_label"/>: <t t-esc="props.env.services.pos.company.vat" /></div>
                    </t>
                    <t t-if="props.env.services.pos.company.email">
                        <div><t t-esc="props.env.services.pos.company.email" /></div>
                    </t>
                    <t t-if="props.env.services.pos.company.website">
                        <div><t t-esc="props.env.services.pos.company.website" /></div>
                    </t>
                    <t t-if="props.receipt and props.receipt.headerData and props.receipt.headerData.header">
                        <t t-out="props.receipt.headerData.header" />
                    </t>
                    <t t-if="props.receipt and props.receipt.headerData and props.receipt.headerData.cashier">
                        <div class="cashier">
                            <div>--------------------------------</div>
                            <div>Served by <t t-esc="props.receipt.headerData.cashier" /></div>
                        </div>
                    </t>
                </div>
            </div>
            <br/>

            <div class="pos-receipt-body">
                <table class='receipt-orderlines' style="font-size:15px; border-style:double; border-left:none; border-right:none; border-bottom:none; width:100%;">
                    <colgroup>
                        <col width='40%' />
                        <col width='30%' />
                        <col width='30%' />
                    </colgroup>
                    <tr style="border-bottom:1px dashed black;">
                        <th style="text-align:left;">Product</th>
                        <th style="text-align:right;">Qty</th>
                        <th style="text-align:right;">Amount</th>
                    </tr>
                    <t t-if="props.orderlines and props.orderlines.length">
                        <tr t-foreach="props.orderlines" t-as="orderline" t-key="orderline_index">
                            <td style="padding-top:1%; padding-bottom:1%; text-align:left;">
                                <t t-esc="orderline.productName or orderline.product_name"/>
                                <t t-if="orderline.discount and orderline.discount > 0">
                                    <div style="font-size:12px; font-style:italic; color:#808080;">
                                        <t t-esc="orderline.discount"/>% discount
                                    </div>
                                </t>
                                <t t-if="orderline.customerNote">
                                    <div style="font-size:14px;" t-esc="orderline.customerNote"/>
                                </t>
                            </td>
                            <td style="text-align:right; font-size:14px;">
                                <t t-esc="orderline.qty || orderline.quantity"/>
                            </td>
                            <td style="text-align:right; font-size:14px;">
                                <t t-if="props.formatCurrency" t-esc="props.formatCurrency(orderline.price || orderline.price_display)"/>
                                <t t-else="" t-esc="orderline.price || orderline.price_display"/>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>
            <br />

            <div class="pos-receipt-totals" style="padding-top:6px;">
                <t t-set='taxincluded' t-value='Math.abs((props.receipt.amount_total || props.data.amount_total || 0) - (props.receipt.total_with_tax || props.data.total_with_tax || 0)) &lt;= 0.000001' />
                <t t-if='!taxincluded'>
                    <br/>
                    <div style="font-weight:700; font-size:14px; border-top:1px dashed;">
                        <span style="margin-left:40%;">Subtotal: </span>
                        <span class="pos-receipt-right-align">
                            <t t-if="props.formatCurrency" t-esc='props.formatCurrency(props.data.total_without_tax || 0)'/>
                            <t t-else="" t-esc='props.data.total_without_tax || 0'/>
                        </span>
                    </div>
                    <t t-if='props.data.tax_details' t-foreach='props.data.tax_details' t-as='tax' t-key="index_tax_details">
                        <div style="font-weight:700; font-size:14px;">
                            <span style="margin-left:40%;"><t t-esc='tax.tax.name' /></span>
                            <span class="pos-receipt-right-align">
                                <t t-if="props.formatCurrency" t-esc='props.formatCurrency(tax.amount)'/>
                                <t t-else="" t-esc='tax.amount'/>
                            </span>
                        </div>
                    </t>
                </t>
                <!-- Total -->
                <br/>
                <div style="font-weight:700; font-size:14px;">
                    <span style="margin-left:40%;">TOTAL: </span>
                    <span class="pos-receipt-right-align">
                        <t t-if="props.formatCurrency" t-esc='props.formatCurrency(props.data.amount_total || 0)'/>
                        <t t-else="" t-esc='props.data.amount_total || 0'/>
                    </span>
                </div>
                <br/><br/>
            </div>

            <div class='before-footer' />
            <br/><br/>

            <!-- Footer -->
            <div class="pos-receipt-order-data">
                <div><t t-esc="props.receipt.name || props.data.name || ''" /></div>
                <t t-if="props.receipt.date || props.data.date">
                    <div><t t-esc="props.receipt.date || props.data.date" /></div>
                </t>
            </div>
            <br/><br/>

            <div style="font-size:14px; text-align:center;">
                Thank You... Please Visit Again ...
            </div>
        </div>]]></field>
    </record>
</odoo>
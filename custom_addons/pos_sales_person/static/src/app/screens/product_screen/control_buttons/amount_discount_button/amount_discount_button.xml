<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_pos.AmountDiscountButton">
        <div class="control-button amount-discount-button"
             t-on-click="onClick"
             t-att-class="{ 'highlight': discountAmount > 0, 'disabled': isDisabled }">
            <i class="fa fa-money" role="img" aria-label="Amount Discount"/>
            <span class="control-button-label">Amount Discount</span>
            <span t-if="discountAmount > 0" class="discount-amount">
                <t t-esc="formattedDiscountAmount"/>
            </span>
        </div>
    </t>
</templates>
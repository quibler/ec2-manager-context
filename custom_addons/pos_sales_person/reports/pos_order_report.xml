<odoo>
    <report
        id="action_report_pos_order"
        model="pos.order"
        string="POS Order"
        report_type="qweb-pdf"
        name="custom_pos_salesperson.report_pos_order"
        file="custom_pos_salesperson.report_pos_order"
        menu="True"/>

    <template id="report_pos_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>POS Order #: <t t-esc="doc.name"/></h2>
                    <strong>Salesperson:</strong> <t t-esc="doc.salesperson_id.name" if="doc.salesperson_id"/>
                </div>
            </t>
        </t>
    </template>
</odoo>
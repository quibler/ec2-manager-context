<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_salesperson_tracking.SetSalespersonButton">
        <div class="control-button" t-att-class="{ highlight: currentSalesperson }">
            <i class="fa fa-user"></i>
            <span>
                <t t-if="currentSalesperson">
                    <t t-esc="currentSalesperson"/>
                </t>
                <t t-else="">
                    Set Salesperson
                </t>
            </span>
        </div>
    </t>
</templates>
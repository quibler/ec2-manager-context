<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add salesperson field to POS order form view -->
    <record id="view_pos_order_form_inherit_salesperson" model="ir.ui.view">
        <field name="name">pos.order.form.inherit.salesperson</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="salesperson_id"/>
            </field>
        </field>
    </record>

    <!-- Add salesperson field to POS order list view (formerly tree view) -->
    <record id="view_pos_order_tree_inherit_salesperson" model="ir.ui.view">
        <field name="name">pos.order.list.inherit.salesperson</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="salesperson_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Add salesperson to search view -->
    <record id="view_pos_order_search_inherit_salesperson" model="ir.ui.view">
        <field name="name">pos.order.search.inherit.salesperson</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="salesperson_id"/>
                <filter string="Salesperson" name="salesperson" domain="[]" context="{'group_by':'salesperson_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
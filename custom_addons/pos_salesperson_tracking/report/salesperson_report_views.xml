<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_pos_salesperson_pivot" model="ir.ui.view">
        <field name="name">report.pos.salesperson.pivot</field>
        <field name="model">report.pos.salesperson</field>
        <field name="arch" type="xml">
            <pivot string="Salesperson Analysis" display_quantity="true">
                <field name="salesperson_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="price_total" type="measure"/>
                <field name="product_qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_report_pos_salesperson_graph" model="ir.ui.view">
        <field name="name">report.pos.salesperson.graph</field>
        <field name="model">report.pos.salesperson</field>
        <field name="arch" type="xml">
            <graph string="Salesperson Analysis">
                <field name="salesperson_id"/>
                <field name="price_total" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_report_pos_salesperson_search" model="ir.ui.view">
        <field name="name">report.pos.salesperson.search</field>
        <field name="model">report.pos.salesperson</field>
        <field name="arch" type="xml">
            <search string="Salesperson Analysis">
                <field name="date"/>
                <filter string="Today" name="today" domain="[('date','=',context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('date','&gt;=',context_today().replace(day=1).strftime('%Y-%m-%d')), ('date','&lt;',(context_today().replace(day=1) + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Year" name="this_year" domain="[('date','&gt;=',time.strftime('%Y-01-01'))]"/>
                <separator/>
                <field name="salesperson_id"/>
                <field name="user_id"/>
                <field name="product_id"/>
                <field name="product_categ_id"/>
                <field name="config_id"/>
                <group expand="1" string="Group By">
                    <filter string="Salesperson" name="salesperson" context="{'group_by':'salesperson_id'}"/>
                    <filter string="Product" name="product" context="{'group_by':'product_id'}"/>
                    <filter string="Product Category" name="product_category" context="{'group_by':'product_categ_id'}"/>
                    <filter string="POS" name="point_of_sale" context="{'group_by':'config_id'}"/>
                    <filter string="Order Status" name="status" context="{'group_by':'state'}"/>
                    <filter string="Order Date" name="order_day" context="{'group_by':'date:day'}"/>
                    <filter string="Order Month" name="order_month" context="{'group_by':'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_report_pos_salesperson" model="ir.actions.act_window">
        <field name="name">Salesperson Analysis</field>
        <field name="res_model">report.pos.salesperson</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="view_report_pos_salesperson_search"/>
        <field name="help">This report performs analysis on your point of sale salesperson performance. You can check the performance of salespersons in selling different products, to different customers, over time.</field>
    </record>

    <menuitem
        id="menu_report_pos_salesperson"
        name="Salesperson Analysis"
        action="action_report_pos_salesperson"
        parent="point_of_sale.menu_point_rep"
        sequence="5"/>
</odoo>